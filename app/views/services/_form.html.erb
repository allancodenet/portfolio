

        <%= form_with model: service, class: "mt-6" do |form| %>
          <div class="grid">
          
          
          <% if service.errors.any? %>
            <div style="color: red">
              <h2><%= pluralize(service.errors.count, "error") %> prohibited this service from being saved:</h2>

              <ul>
                <% service.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div  class="col-span-full">
            <%= form.label :name, class:"block text-sm font-medium text-gray-700" %>
            <%= form.text_field :name, class:"mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          </div>

          <div class="col-span-full">
            <%= form.label :price, class:"block text-sm font-medium text-gray-700" %>
            <%= form.text_field :price, class:"block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          </div>

          <div>
          <h2>Fields for  levels</h2>
            <%= form.fields_for  :level do |level_form| %>
            <div  class="col-span-full">
              <%= level_form.label :name, class:"block text-sm font-medium text-gray-700" %>
            <%= level_form.text_field :name, class:"block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"%>
            </div>

            <div  class="col-span-full">
            <%=level_form.label :price, class:"block text-sm font-medium text-gray-700" %>
            <%= level_form.text_field :price, class:"block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
            </div>
            <% end %>
          </div>

          <div>
          <h2>Fields for  extras</h2>
            <%= form.fields_for  :extra do |extra_form| %>
            <div class="col-span-full">
            <%= extra_form.label :name, class:"block text-sm font-medium text-gray-700" %>
            <%= extra_form.text_field :name, class:"block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
            </div>
            <div class="col-span-full">
            <%= extra_form.label :description, class:"block text-sm font-medium text-gray-700" %>
            <%= extra_form.text_field :description, class:"block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
            </div>

            <div class="col-span-full">
            <%=extra_form.label :price, class:"block text-sm font-medium text-gray-700" %>
            <%= extra_form.text_field :price, class:"block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
            
            </div>
            <% end %>
          </div>

          <div>
          <h2 class="text-green-200">Fields for  urgencies</h2>
            <%= form.fields_for  :urgency do |urgency_form| %>
            <div  class="col-span-full">
            <%= urgency_form.label :duration, class:"block text-sm font-medium text-gray-700" %>
            <%= urgency_form.number_field :duration, class:"block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
            </div>
            <div  class="col-span-full">
            <%= urgency_form.label :price, class:"block text-sm font-medium text-gray-700" %>
            <%= urgency_form.text_field :price, class:"block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
            </div>

            <% end %>
          </div>

          <div>
            <%= form.submit class:"mt-6 w-full rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"%>
          </div>
        </div>
        <% end %>



